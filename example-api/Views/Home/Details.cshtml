@model Product
@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Title Detay Sayfası</h1>
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <!-- Görsel boyutu düzenlendi -->
            <img src="@Model.Image" alt="@Model.Title" class="img-fluid"
                style="max-width: 100%; height: auto; max-height: 400px; object-fit: contain;">
        </div>
        <div class="col-md-6">
            <h2>@Model.Title</h2>
            <p><strong>Description:</strong> @Model.Description</p>
            <p><strong>Price:</strong> @($"{Model.Price:C2}")</p>
            <p><strong>Category:</strong> @Model.Category</p>
        </div>
    </div>
</div>

<!-- Footer alanını aşağı sabitlemek için boş alan eklendi -->
<div style="height: 250px;"></div>