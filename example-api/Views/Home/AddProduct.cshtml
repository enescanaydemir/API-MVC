@model Product
@{
    ViewData["Title"] = "AddProduct";
}

<h1>Ürün Ekle</h1>
<form method="post">
    <div class="form-group">
        <label for="title">Başlık</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Başlık">
    </div>
    <div class="form-group">
        <label for="description">Açıklama</label>
        <input type="text" class="form-control" id="description" name="description" placeholder="Açıklama">
    </div>
    <div class="form-group">
        <label for="image">Resim</label>
        <input type="text" class="form-control" id="image" name="image" placeholder="Resim">
    </div>
    <div class="form-group">
        <label for="price">Fiyat</label>
        <input type="number" class="form-control" id="price" name="price" placeholder="Fiyat">
    </div>
    <div class="form-group">
        <label for="category">Kategori</label>
        <input type="text" class="form-control" id="category" name="category" placeholder="Kategori">
    </div>

    <div class="mb-5">
        <label for="category">Kategori Seçin:</label>
        <select id="category" asp-for="Category" class="form-control">
            @foreach (var category in ViewBag.Categories as List<string>)
            {
                <option value="@category">@category</option>
            }
        </select>
        <button type="submit" class="btn btn-primary">Ekle</button>
    </div>
</form>
